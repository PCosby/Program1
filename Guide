import java.util.Arrays; 
//Arrays.toString([array])

import java.util.ArrayList;
ArrayList<Char> yes = new ArrayList<Char>();
yes.size(); yes.add('p'); 
no .toString needed print(yes) -> [p] 
yes.get(0) instead of yes[0]; returns p yes.set(indexnumber,value); instead of yes[indexnumber] = value; 
yes.remove(indexnumber); or yes.remove(value); -> yes.remove('p'); //for an int array, .remove only removes the index position, unless you make a class -new Integer(a)
yes.indexOf('p'); returns 0

import java.util.Random;
Random rand = new Random();
rand.nextInt(a); //a is optional, but must be positive, if a, it returns 0-a//returns random int without a (could be negative) 1-6 -> 1+rand.nextInt(5)
rand.nextBoolean(); rand.nextFloat(); rand.nextDouble();
rand.setSeed(a); //people typically replace a with System.currentTimeMillis() for randomness :o

import java.util.Scanner; //reads user input
